@{
    ViewData["Title"] = "Tính điểm môn học";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Tính điểm môn học</h2>

        <form method="get" class="mt-3">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="A" class="form-label">Điểm A:</label>
                    <input type="number" step="0.1" name="A" class="form-control" required />
                </div>

                <div class="col-md-4">
                    <label for="B" class="form-label">Điểm B:</label>
                    <input type="number" step="0.1" name="B" class="form-control" required />
                </div>

                <div class="col-md-4">
                    <label for="C" class="form-label">Điểm C:</label>
                    <input type="number" step="0.1" name="C" class="form-control" required />
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">Tính điểm</button>
            </div>
        </form>

        @if (ViewBag.Result != null)
        {
            <div class="alert alert-info mt-4 text-center">
                <h4>@ViewBag.Result</h4>
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">